<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
    <game_saving_xml name = "save_game.xml" want_to_save = "false"/>
    <framerate_cap value = "30"/>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1280" height="860" scale="3"/>
    <!-- <resolution width="640" height="480" scale="2"/>-->
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
  
<!--
  <file_system>
    <path>data.zip</path>
  </file_system>
-->
  
  <map>
    <folder>maps</folder>
  </map>

  <scene>
    <file music_name = "audio/music/Armored Armadillo.ogg"/>
    <scroll speed = "2.5" />
  
    <levels>
      <!-- <map first="1"/>-->
      <first_level id= "1" loaded= "1" name = "rock_level.tmx"/>
      <second_level id= "2" loaded= "0" name = "JAIL.tmx"/>
    </levels>

    <enemy_pos>
      <Air1-1 x ="260" y="170"/>
      <Ground1-1 x ="550" y="170"/>
      <Air1-2 x ="1500" y="50"/>
      <Ground1-2 x ="1900" y="100"/>
      <Air2-1 x ="320" y="170"/>
      <Ground2-1 x ="1050" y="200"/>
      <Air2-2 x ="1500" y="50"/>
      <Ground2-2 x ="1900" y="100"/>
    </enemy_pos>
  </scene>

  <player>
    <file name = "textures/8bitmegaman.png" />
    <physics velocityx = " 150.0" velocityy = "480.0" gravity = "200.0"/>
    <movement jumpframes= "15"/>
    <size x= "22" y= "22" />
  </player>

  <enemies>
    <file name = "textures/enemies.png" />

    <blader>
      <size x = "16" y = "21"/>
    </blader>
  
  </enemies>

</config>